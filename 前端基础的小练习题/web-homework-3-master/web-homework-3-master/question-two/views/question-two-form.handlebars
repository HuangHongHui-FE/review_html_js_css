<div class="row">
    <div class="col-md-12">

        {{#if message}}
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {{/if}}

        <div class="card">
            <h5 class="card-header bg-primary">
                Your details
            </h5>
            <div class="card-body">
                <p class="card-text">Please fill out your details here.</p>
                <form action="./submit" method="POST">
                    {{!TODO 5) Set the values of the three <input>s to the appropriate values supplied in res.locals. }}
                    <div class="form-group">
                        <label for="txtName">Name:</label>
                        <input type="text" class="form-control" id="txtName" name="name" value='{{this.name}}'>
                    </div>

                    <div class="form-group">
                        <label for="txtAddress">Address:</label>
                        <input type="text" class="form-control" id="txtAddress" name="address" value='{{this.address}}'>
                    </div>

                    <div class="form-group">
                        <label for="txtPhone">Phone number:</label>
                        <input type="text" class="form-control" id="txtPhone" name="phoneNum" value="{{this.phoneNum}}">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>