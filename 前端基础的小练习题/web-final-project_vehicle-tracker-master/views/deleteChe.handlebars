<div class="createChe" style="display:flex;">
    {{#each data}}
    <div style="padding-bottom: 60px; margin-right:30px;">
        <div style="color: red;">
            字母数字注册号（唯一）:
            <strong>{{this.register_number}}</strong>
        </div>
        <div>
            制造商名称:{{this.maker}}
        </div>
        <div>
            型号:
            {{this.model}}
        </div>
        <div>
            车型年:
            {{this.year}}
        </div>
        <div>
            起始里程值:
            {{this.start_value}}
        </div>
        <div>
            车辆颜色:
            {{this.color}}
        </div>
        <div>
            车辆拥有的座椅数量:
            {{this.nums}}
        </div>
        <div>
            车辆照片:
            <img src="upload/{{this.picture_path}}" alt="" style="width: 200px;height:200px;">
        </div>
        <input id="delete_btn" value="删除" name="{{this.register_number}}" type="submit">
    </div>
        
    {{/each}}
</div>

<script>
    let delete_inp = document.getElementsByTagName('input')
    for(let i of delete_inp){
        i.onclick = function(e){
            delete_post(e.target.name)
        }
    }
    function delete_post(name){
        axios.post("/delete_che",{register_number: name})
            .then((res) => {return res})
            .catch((err) => {return err})
    }
</script>